<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.Credentials.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="-90dp"
        app:srcCompat="@drawable/dental" />

    <!-- APLICAR MATERIAL DESING A LOS EDITTEXT -->

    <EditText
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/turque"
        android:hint="Usuario"/>

    <EditText
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/turque"
        android:hint="Contrase単a" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="140dp"
            android:layout_height="26dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="23dp"
            android:text="Recuerdame"
            android:textColor="@color/lead"
            android:buttonTint="@color/turque"/>

        <TextView
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="多Olvidaste tu contrase単a?"
            android:textSize="15dp"
            android:typeface="sans" />

    </LinearLayout>

    <Button
        android:id="@+id/btnButton"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/turque"
        android:text="Ingresar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/goo" />
        <TextView
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Iniciar Sesion con google"
            android:textSize="15dp"
            android:typeface="sans" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="多No tienes cuenta?"
        android:textSize="15dp"
        android:typeface="sans" />

</LinearLayout>