<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UI.Menu.MenuActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:text="Odontología XYZ"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/turque"/>


    <LinearLayout
        android:id="@+id/btnGoTo"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="120dp"
            android:layout_height="103dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/reserv" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:text="Mis citas" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="120dp"
            android:layout_height="95dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/horario" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:text="Mis Reservas" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:orientation="horizontal"
        android:padding="14dp"
        >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/certificado" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historia Clínica"
            android:textSize="15dp"
            android:layout_marginTop="30dp"/>


    </LinearLayout>
</LinearLayout>